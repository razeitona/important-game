@page
@using System.Globalization
@model IndexModel
@{
    ViewData["Title"] = "Match to Watch - Discover Today's Most Exciting Football Matches";
    ViewData["Description"] = "Find the most thrilling football matches to watch today with our Excitement Score. Live match tracking, upcoming fixtures, and expert predictions for football fans.";
    ViewData["Keywords"] = "football matches today, exciting football games, live football scores, match predictions, football excitement score, upcoming matches, football fixtures";
}

@* Top Leaderboard Ad - Above content *@
<div class="ad-container ad-leaderboard">
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-1934500034472565"
         data-ad-slot="3310130902"
         data-ad-format="auto"
         data-full-width-responsive="true"></ins>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
</div>

@if (Model.LiveMatches.Count > 0)
{
    <div class="matches-section live-matches-section" id="live-matches-section">
        <div class="matches-section-title">
            <h1><i class="bi bi-circle-fill live-indicator"></i> Live Matches</h1>
            <a href="/matches">See all</a>
        </div>

        <div class="matches-section-content actual-content">
            @foreach (var match in Model.LiveMatches)
            {
                <partial name="_MatchCardSimple" for="@match" />
            }
        </div>
    </div>
}

@if (Model.TrendingMatches.Count > 0)
{
    <div class="matches-section" id="trending-matches-section">
        <div class="matches-section-title">
            <h1>Match of the week</h1>
            <a href="/matches">See all</a>
        </div>

        @* Skeleton loading state (hidden by default) *@
        <div class="matches-section-content skeleton-content" style="display: none;">
            @for (int i = 0; i < 3; i++)
            {
                <partial name="_SkeletonMatchCardSimple" />
            }
        </div>

        @* Actual content *@
        <div class="matches-section-content actual-content">
            @foreach (var match in Model.TrendingMatches)
            {
                <partial name="_MatchCardSimple" for="@match" />
            }
        </div>
    </div>
}

@* Native In-Feed Ad - Between sections for better user experience *@
<div class="ad-container ad-between-sections">
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-format="fluid"
         data-ad-layout-key="-fb+5w+4e-db+86"
         data-ad-client="ca-pub-1934500034472565"
         data-ad-slot="3310130902"></ins>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
</div>
@* <div class="d-flex justify-content-end">
    <a href="https://t.me/matchtowatch" class="mt-telegram">Join Telegram <i class="bi bi-telegram"></i></a>
</div> *@

<div class="matches-section" id="upcoming-matches-section">
    <div class="matches-section-title">
        <h1>Upcoming matches</h1>
        <a href="/matches">See all</a>
    </div>

    @* Skeleton loading state (hidden by default) *@
    <div class="matches-section-content skeleton-content" style="display: none;">
        @for (int i = 0; i < 5; i++)
        {
            <partial name="_SkeletonMatchCardSimple" />
        }
    </div>

    @* Actual content *@
    <div class="matches-section-content actual-content">
        @if (Model.OtherMatches.Count == 0)
        {
            <label>No excitment match to watch this week. We are looking for one.</label>
        }
        else
        {
            foreach (var match in Model.OtherMatches)
            {
                <partial name="_MatchCardSimple" for="@match" />
            }
        }
    </div>
</div>

@section Scripts {
}