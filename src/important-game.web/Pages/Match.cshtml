@page "/match/{slug}"
@using System.Globalization
@using important_game.infrastructure.Contexts.Matches.Enums
@using important_game.infrastructure.Extensions
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@model MatchModel
@{
    var matchInfo = Model.MatchInfo;

    if (matchInfo != null)
    {
        var excitementScore = Math.Round(matchInfo.ExcitmentScore * 100, 0);
        var matchTitle = $"{matchInfo.HomeTeamName} vs {matchInfo.AwayTeamName}";
        var matchDescription = $"{matchInfo.CompetitionName} match on {matchInfo.MatchDateUTC:dd MMM yyyy} at {matchInfo.MatchDateUTC:HH:mm} UTC. Excitement Score: {excitementScore}/100. {matchInfo.Description}";

        ViewData["Title"] = $"{matchTitle} - Excitement Score {excitementScore} | Match to Watch";
        ViewData["Description"] = matchDescription;
        ViewData["Keywords"] = $"{matchInfo.HomeTeamName}, {matchInfo.AwayTeamName}, {matchInfo.CompetitionName}, football match prediction, excitement score, head to head, match preview";

        var baseUrl = Configuration["SiteSettings:BaseUrl"] ?? "https://matchtowatch.net";
        var homeSlug = SlugHelper.GenerateSlug(matchInfo.HomeTeamName);
        var awaySlug = SlugHelper.GenerateSlug(matchInfo.AwayTeamName);
        var matchUrl = $"{baseUrl}/match/{homeSlug}-vs-{awaySlug}";
        var teamImageId = matchInfo.TitleHolderId ?? matchInfo.HomeTeamId;
        if (matchInfo.AwayTeamTablePosition < matchInfo.HomeTeamTablePosition)
            teamImageId = matchInfo.AwayTeamId;
        var matchImage = $"{baseUrl}/images/team/{teamImageId}.webp";

        ViewData["Image"] = matchImage;
    }
    else
    {
        ViewData["Title"] = "Match Not Found | Match to Watch";
        ViewData["Description"] = "The match you're looking for could not be found.";
    }
}


@if (matchInfo == null)
{
    <div>Sorry, we couldn't find any excitement report for this match</div>
    return;
}

@section Header {
    @{
        var baseUrl = Configuration["SiteSettings:BaseUrl"] ?? "https://matchtowatch.net";
        var homeSlug = SlugHelper.GenerateSlug(matchInfo.HomeTeamName);
        var awaySlug = SlugHelper.GenerateSlug(matchInfo.AwayTeamName);
        var matchUrl = $"{baseUrl}/match/{homeSlug}-vs-{awaySlug}";
        var teamImageId = matchInfo.TitleHolderId ?? matchInfo.HomeTeamId;
        if (matchInfo.AwayTeamTablePosition < matchInfo.HomeTeamTablePosition)
            teamImageId = matchInfo.AwayTeamId;
        var matchImage = $"{baseUrl}/images/team/{teamImageId}.webp";
        var excitementScore = Math.Round(matchInfo.ExcitmentScore * 100, 0);
        var matchStatus = matchInfo.IsLive ? "EventScheduled" : "EventScheduled";
    }

    <!-- Schema.org SportsEvent structured data -->
    <script type="application/ld+json">
        {
            "@@context": "https://schema.org",
            "@@type": "SportsEvent",
            "name": "@Html.Raw(matchInfo.HomeTeamName) vs @Html.Raw(matchInfo.AwayTeamName)",
            "description": "@Html.Raw(matchInfo.Description)",
            "startDate": "@matchInfo.MatchDateUTC.ToString("yyyy-MM-ddTHH:mm:ssZ")",
            "endDate": "@matchInfo.MatchDateUTC.AddHours(2).ToString("yyyy-MM-ddTHH:mm:ssZ")",
            "eventStatus": "https://schema.org/@matchStatus",
            "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
            "sport": "Football",
            "image": "@matchImage",
            "url": "@matchUrl",
            "location": {
                "@@type": "VirtualLocation",
                "name": "Watch Online",
                "url": "@matchUrl"
            },
            "competitor": [
                {
                    "@@type": "SportsTeam",
                    "name": "@Html.Raw(matchInfo.HomeTeamName)",
                    "image": "@(baseUrl)/images/team/@(matchInfo.HomeTeamId).webp"
                },
                {
                    "@@type": "SportsTeam",
                    "name": "@Html.Raw(matchInfo.AwayTeamName)",
                    "image": "@(baseUrl)/images/team/@(matchInfo.AwayTeamId).webp"
                }
            ],
            "organizer": {
                "@@type": "SportsOrganization",
                "name": "@Html.Raw(matchInfo.CompetitionName)",
                "url": "@baseUrl"
            },
            "offers": {
                "@@type": "Offer",
                "availability": "https://schema.org/InStock",
                "price": "0",
                "priceCurrency": "USD",
                "url": "@matchUrl",
                "name": "Free Match Preview"
            },
            "performer": [
                {
                    "@@type": "SportsTeam",
                    "name": "@Html.Raw(matchInfo.HomeTeamName)"
                },
                {
                    "@@type": "SportsTeam",
                    "name": "@Html.Raw(matchInfo.AwayTeamName)"
                }
            ]
        }
    </script>
}
<div class="match-detail" data-live="@(false)@* matchInfo.IsLive *@">
    <span class="match-detail-back"><i class="bi bi-arrow-left"></i>BACK</span>

    @* HERO SECTION - ES + TEAMS *@
    <div class="match-detail-hero">
        <div class="match-hero-header">
            <div class="match-hero-competition">
                <img src="@("/images/competition/" + matchInfo.CompetitionId + ".webp")" alt="@(matchInfo.CompetitionName)" />
                <span class="competition-name">@matchInfo.CompetitionName</span>
            </div>
            <div class="match-hero-time">
                @if (matchInfo.IsLive)
                {
                    <span class="match-detail-live-badge">
                        <i class="bi bi-circle-fill"></i>
                        <span>LIVE NOW</span>
                    </span>
                }
                else
                {
                    <i class="bi bi-calendar3"></i>
                    <time data-utc-time="@matchInfo.MatchDateUTC.ToString("dd/MM/yyyy HH:mm", CultureInfo.InvariantCulture)">
                        @matchInfo.MatchDateUTC.ToString("dd/MM/yyyy HH:mm", CultureInfo.InvariantCulture)
                    </time>
                }
            </div>
        </div>

        <div class="match-hero-content">
            @* HOME TEAM *@
            <div class="match-hero-team">
                <img src="@("/images/team/" + matchInfo.HomeTeamId + ".webp")" alt="@(matchInfo.HomeTeamName)" />
                <div class="team-name-row">
                    <h2>@matchInfo.HomeTeamName</h2>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <button class="team-favorite-btn"
                                data-team-id="@matchInfo.HomeTeamId"
                                data-favorite="false"
                                title="Favorite this team">
                            <i class="bi bi-star"></i>
                        </button>
                    }
                </div>
                @if (matchInfo.HomeTeamTablePosition > 0)
                {
                    <span class="team-position">#@matchInfo.HomeTeamTablePosition</span>
                }
            </div>

            @* EXCITEMENT SCORE CENTER *@
            <div class="match-hero-score">
                <div class="es-label">
                    <i class="bi bi-fire"></i>
                    <span>Excitement Score</span>
                </div>
                <div class="es-value" data-es="@(Math.Round(matchInfo.ExcitmentScore, 2).ToString("0.00", CultureInfo.InvariantCulture))">
                    @(Math.Round(matchInfo.ExcitmentScore * 100, 0))
                </div>
                <p class="es-description">@matchInfo.Description</p>
                @if (matchInfo.IsRivalry || matchInfo.HasTitleHolder)
                {
                    <div class="es-badges">
                        @if (matchInfo.IsRivalry)
                        {
                            <span class="badge badge-rivalry"><i class="bi bi-thermometer-high"></i>Rivalry</span>
                        }
                        @if (matchInfo.HasTitleHolder)
                        {
                            <span class="badge badge-title"><i class="bi bi-trophy"></i>Title Holder</span>
                        }
                    </div>
                }
            </div>

            @* AWAY TEAM *@
            <div class="match-hero-team">
                <img src="@("/images/team/" + matchInfo.AwayTeamId + ".webp")" alt="@(matchInfo.AwayTeamName)" />
                <div class="team-name-row">
                    <h2>@matchInfo.AwayTeamName</h2>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <button class="team-favorite-btn"
                                data-team-id="@matchInfo.AwayTeamId"
                                data-favorite="false"
                                title="Favorite this team">
                            <i class="bi bi-star"></i>
                        </button>
                    }
                </div>
                @if (matchInfo.AwayTeamTablePosition > 0)
                {
                    <span class="team-position">#@matchInfo.AwayTeamTablePosition</span>
                }
            </div>
        </div>

        @* ACTIONS BAR *@
        <div class="match-hero-actions">
            <button class="match-alert-btn"
                    data-match-id="@matchInfo.MatchId"
                    data-match-title="@matchInfo.HomeTeamName vs @matchInfo.AwayTeamName"
                    data-match-date="@matchInfo.MatchDateUTC.ToString("o")"
                    data-match-url="/match/@SlugHelper.GenerateSlug(matchInfo.HomeTeamName)-vs-@SlugHelper.GenerateSlug(matchInfo.AwayTeamName)"
                    title="Set alert for this match (30 min before kickoff)">
                <i class="bi bi-bell"></i>
                <span class="alert-text">Set Alert</span>
            </button>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <button class="match-detail-like-btn"
                        data-match-id="@matchInfo.MatchId"
                        data-liked="false"
                        title="Like this match">
                    <i class="bi bi-heart"></i>
                    <span class="like-count">0</span>
                </button>
            }
            <div class="share-buttons">
                <span class="share-label">Share:</span>
                <button type="button" class="share-btn share-whatsapp"
                        data-match-title="@matchInfo.HomeTeamName vs @matchInfo.AwayTeamName"
                        data-match-score="@Math.Round(matchInfo.ExcitmentScore * 100, 0)"
                        data-share-type="whatsapp"
                        title="Share on WhatsApp">
                    <i class="bi bi-whatsapp"></i>
                </button>
                <button type="button" class="share-btn share-twitter"
                        data-match-title="@matchInfo.HomeTeamName vs @matchInfo.AwayTeamName"
                        data-match-score="@Math.Round(matchInfo.ExcitmentScore * 100, 0)"
                        data-share-type="twitter"
                        title="Share on Twitter/X">
                    <i class="bi bi-twitter-x"></i>
                </button>
                <button type="button" class="share-btn share-facebook"
                        data-match-title="@matchInfo.HomeTeamName vs @matchInfo.AwayTeamName"
                        data-match-score="@Math.Round(matchInfo.ExcitmentScore * 100, 0)"
                        data-share-type="facebook"
                        title="Share on Facebook">
                    <i class="bi bi-facebook"></i>
                </button>
                <button type="button" class="share-btn share-copy"
                        data-share-type="copy"
                        title="Copy Link">
                    <i class="bi bi-link-45deg"></i>
                </button>
            </div>
        </div>

    </div>

    @* TWO COLUMN LAYOUT - STATS *@
    <div class="match-detail-stats">
        <div class="match-detail-column">
            @* EXCITEMENT BREAKDOWN *@
            <div class="match-detail-card">
                <h3><i class="bi bi-bar-chart-line"></i>Excitement Score Breakdown</h3>
                <div class="esdetail-content">
                    @foreach (var item in matchInfo.ExcitmentScoreDetail.Where(c => c.Value.Show))
                    {
                        var scoreValue = Math.Round(item.Value.Value * 100, 0);
                        <div class="esdetail-item">
                            <div class="esdetail-header">
                                <span class="esdetail-name">@item.Key</span>
                                <span class="esdetail-value">@scoreValue</span>
                            </div>
                            <div class="esdetail-bar">
                                <div class="esdetail-bar-fill" style="width: @(scoreValue)%" data-score="@scoreValue"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @* RECENT FORM *@
            <div class="match-detail-card">
                <h3><i class="bi bi-graph-up-arrow"></i>Recent Form</h3>
                <div class="form-content">
                    <div class="form-team">
                        <span class="form-team-name">@matchInfo.HomeTeamName</span>
                        <div class="form-badges">
                            @foreach (var form in matchInfo.HomeTeamForm)
                            {
                                var formResult = form switch
                                {
                                    MatchResultType.Win => "W",
                                    MatchResultType.Draw => "D",
                                    MatchResultType.Lost => "L",
                                    _ => ""
                                };
                                <span class="form-badge" data-form-score="@((int)form)">@formResult</span>
                            }
                        </div>
                    </div>
                    <div class="form-team">
                        <span class="form-team-name">@matchInfo.AwayTeamName</span>
                        <div class="form-badges">
                            @foreach (var form in matchInfo.AwayTeamForm)
                            {
                                var formResult = form switch
                                {
                                    MatchResultType.Win => "W",
                                    MatchResultType.Draw => "D",
                                    MatchResultType.Lost => "L",
                                    _ => ""
                                };
                                <span class="form-badge" data-form-score="@((int)form)">@formResult</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @* HEAD TO HEAD *@
            <div class="match-detail-card">
                <h3><i class="bi bi-arrow-left-right"></i>Head to Head History</h3>
                <div class="h2h-content">
                    @if (matchInfo.HeadToHead.Count == 0)
                    {
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p>No matches between <strong>@matchInfo.HomeTeamName</strong> and <strong>@matchInfo.AwayTeamName</strong> in the past two years</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var match in matchInfo.HeadToHead)
                        {
                            <div class="h2h-item">
                                <span class="h2h-date">
                                    <time data-utc-time="@match.MatchDateUTC.ToString("dd/MM/yyyy HH:mm", CultureInfo.InvariantCulture)">
                                        @match.MatchDateUTC.ToString("dd/MM/yyyy")
                                    </time>
                                </span>
                                <div class="h2h-result">
                                    @if (match.HomeTeamScore > match.AwayTeamScore)
                                    {
                                        <span class="team-name winner">@match.HomeTeamName</span>
                                        <span class="score winner">@match.HomeTeamScore</span>
                                        <span class="separator">-</span>
                                        <span class="score loser">@match.AwayTeamScore</span>
                                        <span class="team-name loser">@match.AwayTeamName</span>
                                    }
                                    else if (match.AwayTeamScore > match.HomeTeamScore)
                                    {
                                        <span class="team-name loser">@match.HomeTeamName</span>
                                        <span class="score loser">@match.HomeTeamScore</span>
                                        <span class="separator">-</span>
                                        <span class="score winner">@match.AwayTeamScore</span>
                                        <span class="team-name winner">@match.AwayTeamName</span>
                                    }
                                    else
                                    {
                                        <span class="team-name draw">@match.HomeTeamName</span>
                                        <span class="score draw">@match.HomeTeamScore</span>
                                        <span class="separator">-</span>
                                        <span class="score draw">@match.AwayTeamScore</span>
                                        <span class="team-name draw">@match.AwayTeamName</span>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            @* BROADCAST CHANNELS *@
            @if (matchInfo.BroadcastsByCountry != null && matchInfo.BroadcastsByCountry.Count > 0)
            {
                <div class="match-detail-card">
                    <h3><i class="bi bi-tv"></i>Where to Watch</h3>

                    <div class="broadcast-country-selector">
                        <label for="country-select">
                            <i class="bi bi-globe"></i>
                            Select your country:
                        </label>
                        <select id="country-select" class="country-dropdown">
                            <option value="">Choose a country...</option>
                            @foreach (var countryGroup in matchInfo.BroadcastsByCountry.OrderBy(c => c.Key))
                            {
                                <option value="@countryGroup.Key">@countryGroup.Key</option>
                            }
                        </select>
                    </div>

                    <div class="broadcast-channels-wrapper">
                        <div class="broadcast-no-selection" id="broadcast-no-selection">
                            <i class="bi bi-globe"></i>
                            <p>Please select a country to view available channels</p>
                        </div>

                        @foreach (var countryGroup in matchInfo.BroadcastsByCountry.OrderBy(c => c.Key))
                        {
                            <div class="broadcast-channels-container" data-country="@countryGroup.Key" style="display: none;">
                                <div class="broadcast-channels-list">
                                    @foreach (var broadcast in countryGroup.Value)
                                    {
                                        <div class="broadcast-channel-item">
                                            <i class="bi bi-tv-fill"></i>
                                            <div class="broadcast-channel-info">
                                                <span class="broadcast-channel-name">@broadcast.ChannelName</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="match-detail-column">

            @* LEAGUE TABLE *@
            @if (matchInfo.LeagueTable.Count > 0)
            {
                <div class="match-detail-card">
                    <h3><i class="bi bi-trophy"></i>League Table</h3>
                    <div class="league-table-content">
                        <div class="league-table-wrapper">
                            <table class="league-table">
                                <thead>
                                    <tr>
                                        <th class="col-pos">#</th>
                                        <th class="col-team">Team</th>
                                        <th class="col-stat col-desktop">M</th>
                                        <th class="col-stat col-desktop">W</th>
                                        <th class="col-stat col-desktop">D</th>
                                        <th class="col-stat col-desktop">L</th>
                                        <th class="col-stat col-desktop">GF</th>
                                        <th class="col-stat col-desktop">GA</th>
                                        <th class="col-stat">GD</th>
                                        <th class="col-pts">Pts</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var row in matchInfo.LeagueTable)
                                    {
                                        <tr class="@(row.IsPlayingTeam ? "playing-team" : "")">
                                            <td class="col-pos">@row.Position</td>
                                            <td class="col-team">
                                                <img src="@("/images/team/" + row.TeamId + ".webp")" alt="@row.TeamName" class="team-logo" />
                                                <span class="team-name">@row.TeamName</span>
                                            </td>
                                            <td class="col-stat col-desktop">@row.Matches</td>
                                            <td class="col-stat col-desktop">@row.Wins</td>
                                            <td class="col-stat col-desktop">@row.Draws</td>
                                            <td class="col-stat col-desktop">@row.Losses</td>
                                            <td class="col-stat col-desktop">@row.GoalsFor</td>
                                            <td class="col-stat col-desktop">@row.GoalsAgainst</td>
                                            <td class="col-stat">@(row.GoalDifference > 0 ? "+" + row.GoalDifference : row.GoalDifference.ToString())</td>
                                            <td class="col-pts">@row.Points</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            @* In-Article Ad - High Engagement Area *@
            <div class="ad-container ad-in-article">
                <ins class="adsbygoogle"
                     style="display:block; text-align:center;"
                     data-ad-layout="in-article"
                     data-ad-format="fluid"
                     data-ad-client="ca-pub-1934500034472565"
                     data-ad-slot="8344811649"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".match-detail-back").on("click", function () {
                history.back();
            });

            // Handle country dropdown for broadcasts
            const countrySelect = $("#country-select");
            if (countrySelect.length > 0) {
                // Try to load saved country from localStorage
                const savedCountry = localStorage.getItem("selectedBroadcastCountry");

                if (savedCountry && countrySelect.find(`option[value="${savedCountry}"]`).length > 0) {
                    countrySelect.val(savedCountry);
                    showBroadcastsForCountry(savedCountry);
                }

                // Handle country selection change
                countrySelect.on("change", function () {
                    const selectedCountry = $(this).val();
                    if (selectedCountry) {
                        localStorage.setItem("selectedBroadcastCountry", selectedCountry);
                        showBroadcastsForCountry(selectedCountry);
                    } else {
                        $("#broadcast-no-selection").show();
                        $(".broadcast-channels-container").hide();
                    }
                });
            }

            function showBroadcastsForCountry(country) {
                $("#broadcast-no-selection").hide();
                $(".broadcast-channels-container").hide();
                $(`.broadcast-channels-container[data-country="${country}"]`).show();
            }
        });
    </script>
}
