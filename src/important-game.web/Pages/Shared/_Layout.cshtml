<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="title" content="Match to Watch - Discover today’s most exciting football matches">
    <meta name="description" content="Explore excitement scores, live updates, and predictions for top football, basketball, and more. Your go-to for thrilling sports action.">
    <meta name="keywords" content="exciting sports matches, live sports previews, match excitement score, football predictions, thrilling games">
    <meta name="robots" content="index, follow">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/esfont.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-NGV2ZXXS');</script>
    <!-- End Google Tag Manager -->

    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1934500034472565" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Header", required: false)
</head>

<body>
    <!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NGV2ZXXS"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm watch-header navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand page-title" asp-area="" asp-page="/Index">
                    <img src="\matchtowatch.svg" alt="Logo" width="30" class="d-inline-block align-text-top">
                    <span>Match to watch</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/matches">Matches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/calendar">Calendar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">About</a>
                        </li>
                        <li class="nav-item mw-menu-item">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <div class="user-menu">
                                    @{
                                        var userName = User.Identity.Name ?? "User";
                                        var userPicture = User.Claims.FirstOrDefault(c => c.Type == "picture")?.Value;
                                    }
                                    @if (!string.IsNullOrEmpty(userPicture))
                                    {
                                        <img src="@userPicture" alt="@userName" class="user-avatar" />
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-circle user-avatar-icon"></i>
                                    }
                                    <span class="user-name">@userName</span>
                                    <a href="/logout" class="btn btn-sm btn-logout">Logout</a>
                                </div>
                            }
                            else
                            {
                                <button class="btn btn-login" id="loginBtn">
                                    <i class="bi bi-box-arrow-in-right"></i>
                                    <span>Login</span>
                                </button>
                            }
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-timezone">
                    <label for="timezoneSelector" class="timezone-label">Timezone:</label>
                    <select id="timezoneSelector" class="timezone-selector">
                        <option value="UTC">UTC</option>
                        <option value="GMT">GMT</option>
                        <option value="CET">CET</option>
                        <option value="PST">PST</option>
                    </select>
                </div>
            </div>
        </div>
    </footer>

    @* Login Modal *@
    <div class="login-modal" id="loginModal">
        <div class="login-modal-overlay"></div>
        <div class="login-modal-content">
            <button class="login-modal-close" id="closeLoginModal">
                <i class="bi bi-x"></i>
            </button>
            <div class="login-modal-header">
                <img src="\matchtowatch.svg" alt="Match to Watch" class="login-modal-logo" />
                <h2>Welcome to Match to Watch</h2>
                <p>Sign in to save your favorite matches and vote on exciting games</p>
            </div>
            <div class="login-modal-body">
                <button class="btn-google-signin" id="googleSignInBtn">
                    <svg class="google-icon" viewBox="0 0 24 24" width="24" height="24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span>Sign in with Google</span>
                </button>
            </div>
            <div class="login-modal-footer">
                <p class="login-modal-disclaimer">
                    By signing in, you agree to our Terms of Service and Privacy Policy
                </p>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/heatmap.js/2.0.0/heatmap.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>