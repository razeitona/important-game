@* Match Stream Player - Video.js HLS Player *@
<div class="match-stream-player-container" id="streamPlayerContainer" style="display: none;">
    <div class="stream-player-header">
        <h3><i class="bi bi-play-circle-fill"></i> Live Stream</h3>
        <button class="stream-player-close" id="closeStreamPlayer" title="Close Player">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>

    <div class="stream-player-wrapper">
        <video
            id="streamPlayer"
            class="video-js vjs-big-play-centered vjs-fluid"
            controls
            preload="auto"
            data-setup='{"fluid": true, "aspectRatio": "16:9"}'>
            <p class="vjs-no-js">
                To view this video please enable JavaScript, and consider upgrading to a web browser that
                <a href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
            </p>
        </video>
    </div>

    <div class="stream-disclaimer">
        <i class="bi bi-info-circle"></i>
        <p>We do not host any content. All streams are provided by third-party sources. Match to Watch is not responsible for the availability or content of external streams.</p>
    </div>
</div>
